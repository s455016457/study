<body >
    <script type="text/javascript">
        var dialog = {};
        dialog.opgions = {
            title: '新增',
            iconCls: 'icon-add',
            onSave: function () { },
            onAdd: function () { },
            toolbar: [{
                iconCls: 'icon-save',
                text: 'save',
                handler: function () {
                    $("#addView").dialog("options").onSave.call($("#addView"));
                }
            }, {
                iconCls: 'icon-add',
                text: 'new',
                handler: function () {
                    $("#addView").dialog("options").onAdd.call($("#addView"));
                }
            }]
        };
    </script>
    <div id="addView">
        @RenderBody()
    </div>
<script type="text/javascript">
    $(function () {
        $("#addView").dialog(dialog.opgions).dialog('open');
    });
</script>
</body>
</html>
