<body>
    <div id="editView">
        @RenderBody()
    </div>
    <script type="text/javascript">
        $(function () {
            $("#editView").dialog({
                title: '编辑',
                iconCls: 'icon-edit',
                toolbar: [{
                    iconCls: 'icon-save',
                    text: 'save',
                    handler: function () { alert('save') }
                },{
                    iconCls: 'icon-add',
                    text: 'new',
                    handler: function () { alert('new') }
                }, {
                    iconCls: 'icon-remove',
                    text: 'remove',
                    handler: function () { alert('remove') }
                }]
            }).dialog('open');
        });
    </script>
</body>
</html>
