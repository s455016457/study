<script type="text/javascript">
    $(function () {
        $.extend(dialog.opgions, {
            onSave: function () { $.messager.alert('温馨提示', 'Save!save url:Home/Create?data=data'); },
            onAdd: function () { $.messager.alert('温馨提示', 'Add!add url:Home/Create'); },
            url: 'Home/Create'
        });

        $("#btnSave").click(function () {

            $.ajax({
                url: "/Home/Create",
                type: "Post",
                data: $("#CreateForm").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        window.parent.frameReturnByMes("成功");
                        window.parent.frameReturnByReload(true);
                        window.parent.frameReturnByClose()
                    }
                    else {
                        window.parent.frameReturnByMes("失败");
                    }
                }
            });
        });
    });
</script>
